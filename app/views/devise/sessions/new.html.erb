<div id="background"></div>
<div class="row ">
  <div class="col-lg-3 col-md-2 col-sm-1"></div>
  <div class="col-lg-6 col-md-8 col-sm-10">
    <div class="card sign_in">
  
    <div class="panel panel-default">
      <div class="panel-body">
        <h3 class="thin text-center">Sign in to your account</h3>
        <p class="text-center text-muted">Lorem ipsum dolor sit amet, <a href="signup.html">Register</a> adipisicing elit. Quo nulla quibusdam cum doloremque incidunt nemo sunt a tenetur omnis odio. </p>
        <hr>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="top-margin">
            <%= f.label :email, class: "text-danger" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="top-margin">
            <%= f.label :password, class: "text-danger" %><br />
            <%= f.password_field :password, autocomplete: "off" ,class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="top-margin">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions pull-right">
            <%= f.submit "Log in", class: "btn btn-secondary"  %>
          </div>
        <% end %>  
        <%= render "devise/shared/links" %>
    
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-md-2 col-sm-1"></div>


</div>
</div>

  

