<%=form_for(@ask) do |f| %>	
	<div class="form-group">
		<%=f.text_area :question, class: "form-control"%>
	</div>
	
	<br>
	<div class="form-group">
		<%= f.collection_select(:consultant_id, Consultant.all, :id, :email, {
                                                            
                                                            include_blank: false
                                                          },

                                                            class: "form-control")%>
	</div>
	
	<br>
		<%=f.submit "Create ask", class: "btn btn-primary" %>
<%end%>